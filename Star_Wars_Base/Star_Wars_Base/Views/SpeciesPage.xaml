<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.SpeciesPage"
             BackgroundImageSource="wallpaper.jpg">
    <StackLayout Padding="10">
        <Label Text="Species" Style="{StaticResource titleStyle}"/>
        <ListView x:Name="SpeciesList" ItemsSource="{Binding SpecieCollection}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" TextColor="Yellow"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>