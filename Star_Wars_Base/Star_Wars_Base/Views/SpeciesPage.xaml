<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.SpeciesPage"
             BackgroundImageSource="specieswallpaper.jpg">
    <StackLayout Padding="10" Spacing="80">
        <Label Text="Species" Style="{StaticResource titleStyle}"/>
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
        <ListView x:Name="SpeciesList" ItemsSource="{Binding SpeciesCollection}" ItemTapped="SpeciesList_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout HorizontalOptions="Center">
                            <Label Text="{Binding SpeciesName}" TextColor="NavajoWhite" FontFamily="FullStarWarsFont" FontSize="20"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>