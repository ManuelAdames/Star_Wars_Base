<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.PeopleDetailPage"
             BackgroundImageSource="PeopleWallpaper.jpg">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Label x:Name="LabelName" Style="{StaticResource detailTitle}"/>
                <Label Text="Gender" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelGender" Style="{StaticResource detailStyle}"/>
                <Label Text="Birth Year" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelBirthYear" Style="{StaticResource detailStyle}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>