<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.StartPage"
             BackgroundImageSource="wallpaper.jpg">
    <ContentPage.Content>
        <StackLayout Padding="30" VerticalOptions="Center" Spacing="70">
            <Label Text="Star Wars Base"  Style="{StaticResource titleStyle}"/>
            <Image x:Name ="YodaImage" Source="yodamain.png" HeightRequest="220" WidthRequest="220"/>
            <Button Command="{Binding HomeCommand}" Text="Continue" TextColor="Black" FontFamily="FullStarWarsFont" BackgroundColor="Yellow" FontSize="30" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>