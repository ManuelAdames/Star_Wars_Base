<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.FilmDetailPage"
             BackgroundImageSource="FilmsWallpaper.jpg">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="Title" VerticalOptions="Center" 
                HorizontalOptions="Center" TextColor="NavajoWhite" FontFamily="FullStarWarsFont" FontSize="18"/>
            <Label x:Name="LabelFilmTitle"
                VerticalOptions="Center" 
                HorizontalOptions="Center" TextColor="NavajoWhite" FontFamily="FullStarWarsFont" FontSize="18" />
            <Label x:Name="LabelDate"
                VerticalOptions="Center" 
                HorizontalOptions="Center" TextColor="NavajoWhite" FontFamily="FullStarWarsFont" FontSize="18"/>
            <Label x:Name="LabelOpeningCrawl"
                VerticalOptions="Center" 
                HorizontalOptions="Center" TextColor="NavajoWhite" FontFamily="FullStarWarsFont" FontSize="18"/>
            <Label x:Name="LabelDirector"
                VerticalOptions="Center" 
                HorizontalOptions="Center" TextColor="NavajoWhite" FontFamily="FullStarWarsFont" FontSize="18"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>