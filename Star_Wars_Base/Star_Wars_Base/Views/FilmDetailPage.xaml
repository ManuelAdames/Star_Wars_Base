<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.FilmDetailPage"
             BackgroundImageSource="FilmsWallpaper.jpg">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Label x:Name="LabelFilmTitle" Style="{StaticResource detailTitle}"/>
                <Label Text="Release Date" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelDate" Style="{StaticResource detailStyle}"/>
                <Label Text="Opening Crawl" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelOpeningCrawl" Style="{StaticResource detailStyle}"/>
                <Label Text="Director" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelDirector" Style="{StaticResource detailStyle}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>