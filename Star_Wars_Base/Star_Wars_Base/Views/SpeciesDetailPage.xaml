<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.SpeciesDetailPage"
             BackgroundImageSource="specieswallpaper.jpg">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Label x:Name="LabelName"  Style="{StaticResource detailTitle}"/>
                <Label Text="Classification" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelClassification" Style="{StaticResource detailStyle}"/>
                <Label Text="Language" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelLanguage" Style="{StaticResource detailStyle}"/>
                <Label Text="Lifespan" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelLifespan" Style="{StaticResource detailStyle}"/>
                <Label Text="Designation" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelDesignation" Style="{StaticResource detailStyle}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>