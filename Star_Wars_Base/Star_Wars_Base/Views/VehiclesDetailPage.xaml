<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.VehicleDetailPage"
            BackgroundImageSource="vehicleswallpaper.jpg">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Label x:Name="LabelName" Style="{StaticResource detailTitle}" />
                <Label Text="Model" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelModel" Style="{StaticResource detailStyle}"/>
                <Label Text="Cost" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelCost" Style="{StaticResource detailStyle}"/>
                <Label Text="Passengers" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelPassengers" Style="{StaticResource detailStyle}"/>
                <Label Text="Maximum Atmospheric Speed" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelSpeed" Style="{StaticResource detailStyle}"/>
                <Label Text="Crew" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelCrew" Style="{StaticResource detailStyle}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>