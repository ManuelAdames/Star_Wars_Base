<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Wars_Base.Views.PlanetsDetailPage"
             BackgroundImageSource="planetswallpaper.jpg">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Label x:Name="LabelName" Style="{StaticResource detailTitle}"/>
                <Label Text="Climate" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelClimate" Style="{StaticResource detailStyle}"/>
                <Label Text="Gravity" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelGravity" Style="{StaticResource detailStyle}"/>
                <Label Text="Terrain" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelTerrain" Style="{StaticResource detailStyle}"/>
                <Label Text="Population" Style="{StaticResource detailName}"/>
                <Label x:Name="LabelPopulation" Style="{StaticResource detailStyle}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>